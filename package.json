{
  "name": "receipt-flow-monorepo",
  "private": true,
  "workspaces": [
    "packages/contracts",
    "packages/web"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace packages/web",
    "build:contracts": "npm run compile:hardhat --workspace packages/contracts",
    "build:web": "npm run build --workspace packages/web",
    "build": "npm run build:contracts && npm run build:web",
    "lint:web": "npm run lint --workspace packages/web",
    "test:contracts": "npm run test --workspace packages/contracts",
    "coverage:contracts": "npm run coverage --workspace packages/contracts"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "prettier": "^3.6.2",
    "viem": "^2.39.0",
    "wagmi": "^2.19.4"
  }
}
